<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginEnd="@dimen/margin_card_view"
    android:layout_marginStart="@dimen/margin_card_view"
    android:layout_marginTop="@dimen/margin_card_view"
    android:layout_marginBottom="@dimen/margin_card_view"
    tools:backgroundTint="@android:color/holo_purple">
    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation = "vertical" >
        <TextView
            android:id = "@+id/title"
            style = "@style/TextAppearance.AppCompat.Title"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_marginEnd = "@dimen/margin_tv"
            android:layout_marginStart = "@dimen/margin_tv"
            android:layout_marginTop = "@dimen/margin_tv"
            tools:text = "GB + Kotlin forever" />
        <TextView
            android:id = "@+id/body"
            style = "@style/TextAppearance.AppCompat"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_margin = "@dimen/margin_tv"
            tools:text = "Я Kotlin бы выучил только за то, что на нем разрабатывал
Вортон!" />
    </LinearLayout >

</androidx.cardview.widget.CardView>